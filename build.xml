<project name="rareshroom" basedir="." default="compile">

    <property name="src.dir"     location="src"/>
    <property name="lib.dir"     location="libs" />
    <property name="build.dir"   value="build"/>
    <property name="classes.dir"   value="${build.dir}/classes"/>
    <property name="src_gen.dir"   value="src_gen"/>

    <path id="rareshroom-cp">
        <pathelement path="${classes.dir}"/>
        <libfileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="${classes.dir}" classpathref="rareshroom-cp" includeantruntime="false">
            <compilerarg line="-s ${src_gen.dir}" />
        </javac>
        <javac srcdir="tests" destdir="${classes.dir}" classpathref="rareshroom-cp" includeantruntime="false"/>
    </target>

    <target name="run" depends="compile">
        <java classname="rareshroom.EntryPoint" classpathref="rareshroom-cp"/>
    </target>

    <target name="unit-test">
        <junit printsummary="true" showoutput="true" outputtoformatters="true" fork="true">
            <jvmarg line="--add-opens=org.graalvm.truffle/com.oracle.truffle.api=ALL-UNNAMED"/>
            <jvmarg line="--add-opens=org.graalvm.truffle/com.oracle.truffle.api.nodes=ALL-UNNAMED"/>
            <jvmarg line="--add-opens=org.graalvm.truffle/com.oracle.truffle.api.dsl=ALL-UNNAMED"/>

            <classpath refid="rareshroom-cp"/>
            <batchtest filtertrace="false">
                <fileset dir="tests">
                    <include name="**/*Tests.java"/>
                </fileset>
            </batchtest>
            <formatter type="brief" usefile="false"/>
        </junit>
    </target>

    <target name="clean">
        <delete dir="${build.dir}/"/>
        <delete dir="${src_gen.dir}/"/>
    </target>
</project>
